@model DestinationDream.Models.Countries

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/ChildLayout.cshtml";
}

<script>
    $(document).ready(function () {
        LoadCountry(0);

        $("#Save").click(function () {
           
            var obj = {
                "Id": $("#Id").val(),
                "Code": $("#Code").val(),
                "Name": $("#Name").val(),

            }
            $.ajax({
                "url": "/Country/Save",
                "method": "post",
                "contentType": "application/json",
                "data": JSON.stringify(obj),

                success: function (data) {
                    
                 
                    alert(data.Message);
                    LoadCountry(0);
                },
                error: function (err) { console.log(err); }
            });


        });

        $("#btnRefresh").click(function () {
            LoadCountry();
        });

        $("#txtSearch").keyup(function () {
            $.ajax(
                {
                    "url": "/Country/GetAll?key=" + $("#txtSearch").val(),
                    "method": "get",

                    success: function (data) {
                        if (data.Code == 0) {
                            $("#CountryTable").empty();
                            $.each(data.Message, function (index, item) {
                                $("#CountryTable").append("<tr><td><button onclick='Edit(" + item.Id + ")'>Edit</button><button onclick='Delete(" + item.Id + ")'>Delete</button></td><td>" + item.Id + "</td><td>" + item.Code + "</td><td>" + item.Name + "</td></tr>");
                            });
                        }
                    },
                    error: function (message) 
                    {
                        console.log(message);
                    }
                }
            );
        });

    });


    function LoadCountry(pageno) {

        $.ajax({

            "url": "/Country/GetAllc?pageno="+pageno,
            "method": "get",
            success: function (data) {
                if (data.Code == 0) {
                    $("#CountryTable").empty();
                    $.each(data.Message, function (Add, item) {
                         previous = data.pageno - 1;
                    Next = data.pageno + 1;
                    if (previous == -1) {
                        previous = 0;
                    }
       
                    var next = data.pageno + 1;
                        $("#CountryTable").append("<tr><td><button onclick='Edit(" + item.Id + ")'>Edit</button><button onclick='Delete(" + item.Id + ")'>Delete</button></td><td>" + item.Id + "</td><td>" + item.Code + "</td><td>" + item.Name + "</td></tr>");
                    });
                }
            },
            error: function (message) {

                console.log(message);



            }

        });


    }
    function Edit(id) {
        $.ajax({
            "url": "/Country/FindS?Id=" + id,
            "method": "Post",
            success: function (rep) {
              
                LoadCountry(0);
               debugger;
               console.log(rep);
                if (rep.Code == 0) {

                    var obj = rep.Message 
                    $("#Id").val(obj.Id);
                    $("#Code").val(obj.Code);
                    $("#Name").val(obj.Name);


                }
            },
            error: function (err) {
                console.log(err);
            }
        });
    }
    function Delete(id) {

        if (confirm("Are you sure?")) {

            $.ajax({

                "url": "/Country/Delete?id=" + id,
                "method": "get",
                success: function (rep) {
                    console.log(rep);
                    alert(rep.Message);
                    LoadCountry(0);



                },
                error: function (err) {
                    console.log(err);
                }
            });



        }

    }

</script>


